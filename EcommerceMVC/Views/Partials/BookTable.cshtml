<div class="fullscreen-section pv16" data-bg-image="/images/pages/cover6.jpg" style="background-image: url(/images/pages/cover6.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="heading text-center text-light">
                    <h3>Reservation</h3>
                    <h4>Book your table</h4>
                </div>
            </div>
        </div>
        <div class="row pv10 pvb0">
            <div class="col-md-10 col-md-offset-1">
                <form class="transparent text-light">
                    <div class="row">
                        <div class="col-sm-4">
                            <input type="text" placeholder="Your Name *">
                        </div>
                        <div class="col-sm-4">
